<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackActivity"
    android:paddingLeft="@dimen/app_default_margin"
    android:paddingRight="@dimen/app_default_margin"
    android:paddingTop="@dimen/app_default_margin"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give feedback to:"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/app_default_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity detected:"
        android:textStyle="bold"
        android:layout_below="@id/tvUserName"/>

    <TextView
        android:id="@+id/tvUserActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user activity"
        android:gravity="center_horizontal"
        android:layout_below="@id/tvUserName"
        android:layout_alignParentRight="true"/>

    <EditText
        android:id="@+id/etFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="enter your feedback"
        android:gravity="top"
        android:padding="8dp"
        android:background="@drawable/bg_filled_white_cornors"
        android:lines="5"
        android:inputType="textMultiLine"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/btnSendFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etFeedback"
        android:text="send feedback"/>

</RelativeLayout>